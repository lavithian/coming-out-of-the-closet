
<%= simple_form_for [@costume, @booking] do |f| %>
  <h4>Want to borrow this?</h4>
  <p>Request your preferred dates.</p>
  <div class="date-start">
    <%= f.label :start_date, "" %>
    <%= f.text_field :start_date,
                      data: {
                        controller: "flatpickr",
                        flatpickr_date_format: "Y-m-d",
                        flatpickr_min_date: Time.zone.now
                      },
                      required: true %>
    <%= f.error :start_date %>
  </div>
  <div class="date-end">
    <%= f.label :end_date, "" %>
    <%= f.text_field :end_date,
                      data: {
                        controller: "flatpickr",
                        flatpickr_date_format: "Y-m-d",
                        flatpickr_min_date: Time.zone.now
                      },
                      required: true %>
    <%= f.error :end_date %>
  </div>
  <%= f.submit "Request booking", class: "btn btn-primary" %>
<% end %>

